@model Agenda.Aplicacao.ViewModels.TelefoneViewModel


<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title">Telefones</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-primary btn-sm pull-right">Novo</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-responsive table-striped">
                    <thead>
                    <tr>
                        <th>Tipo de Telefone</th>
                        <th>Número</th>
                        <th>Ramal</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td class="pull-right">
                            <button class="btn btn-primary btn-sm">Editar</button>
                            <button class="btn btn-primary btn-sm">Excluir</button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <hr/>
        <div class="row" id="novoTelefone">
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h2 class="panel-title">Novo Telefone</h2>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.TipoTelefone, htmlAttributes: new { @class = "control-label" })    
                            </div>
                            
                            <div class="col-md-2">
                                @Html.EnumDropDownListFor(model => model.TipoTelefone, htmlAttributes: new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.TipoTelefone, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.Fone, htmlAttributes: new { @class = "control-label" })        
                            </div>
                            
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.Fone, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.Fone, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.Ramal, htmlAttributes: new {@class = "control-label"})
                            </div>

                            <div class="col-md-1">
                                @Html.EditorFor(model => model.Ramal, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.Ramal, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <button class="btn btn-primary btn-sm">Cancelar</button>
                            </div>
                            <div class="col-md-6"></div>
                            <div class="col-md-3">
                                <button class="btn btn-primary btn-sm pull-right">Adicionar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



